{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./"
    },
    "ts-node": {
        "esm": false,
        "experimentalSpecifierResolution": "node"
    },
    "include": [
        "index.ts"
    ]
}